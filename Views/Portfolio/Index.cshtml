@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-white text-black d-flex justify-content-between fs-3 py-3">
            <span class="btn btn-rounded btn-outline-dark"> <i class="mdi mdi-battery-charging-90"></i> Portfolio Sayfası </span>
            <a href="/Portfolio/AddPortfolio/" class="btn btn-rounded btn-outline-info"> <i class="mdi mdi-plus"></i> Yeni Portfolio Ekle </a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-dark text-white table-striped fs-4 py-3">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Resim </th>
                        <th> Ad </th>
                        <th> Fiyat </th>
                        <th> Açıklama  </th>
                        <th> Platform </th>
                        <th> Değer </th>
                        <th> Sil </th>
                        <th> Güncelle </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var port in Model)
                    {
                        <tr>
                            <td> @port.PortfolioId </td>
                            <td> <img src="~/Template/images/portfolio/@port.ImageUrl" class="img-thumbnail" width="80" height="80" /> </td>
                            <td> @port.Name </td>
                            <td> @port.Price </td>
                            <td> @(port.Description.Length > 15 ? port.Description.Substring(0,15)+ "...":port.Description) </td>
                            <td>
                                @if (port.Platform== "Mvc")
                                {
                                    <span class="badge badge-outline-warning"> @port.Platform </span>
                                }
                                else
                                {
                                    <span class="badge badge-outline-primary"> @port.Platform </span>
                                }
                            </td>
                            <td> @port.Value% </td>
                            <td>
                                <a href="/Portfolio/DeletePortfolio/@port.PortfolioId" class="btn btn-rounded btn-outline-danger">
                                    <i class="mdi mdi-delete"></i> 
                                </a>
                            </td>
                            <td>
                                <a href="/Portfolio/EditPortfolio/@port.PortfolioId" class="btn btn-rounded btn-outline-success">
                                    <i class="mdi mdi-tooltip-edit"></i> 
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

