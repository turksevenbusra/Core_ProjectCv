@using EntityLayer.Concrete
@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-white text-white d-flex justify-content-between align-items-center fs-3 py-4">
            <span class="btn btn-rounded btn-outline-dark"> <i class="mdi mdi-battery-charging-90"></i> Sosyal Medya Hesapları Listesi </span>
            <a href="/SocialMedia/AddSocialMedia/" class="btn btn-rounded btn-outline-info">
                <i class="mdi mdi-plus"></i>Yeni Sosyal Medya
            </a>
        </div>
        <div class="card-body">
            <table class="table table-bordered text-white fs-4 py-3">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Ad ve Soyad  </th>
                        <th> URL </th>
                        <th> İkon </th>
                        <th> Sil  </th>
                        <th> Güncelle </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sm in Model)
                    {
                        <tr>
                            <td> @sm.SocialMediaId </td>
                            <td> @sm.Name </td>
                            <td>
                                <a href="@sm.Url" class="btn btnrounded btn-outline-warning">
                                    <i class="mdi mdi-arrow-right"></i> Git
                                </a>
                            </td>
                            <td><i class="@sm.Icon"></i> </td>
                            <td>
                                <a href="/SocialMedia/DeleteSocialMedia/@sm.SocialMediaId" class="btn btnrounded btn-outline-danger">
                                    <i class="mdi mdi-delete"></i> Sil
                                </a>
                            </td>
                            <td>
                                <a href="/SocialMedia/EditSocialMedia/@sm.SocialMediaId" class="btn btnrounded btn-outline-warning">
                                    <i class="mdi mdi-tooltip-arrow"></i> Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

