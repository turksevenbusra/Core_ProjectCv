@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-white text-black d-flex justify-content-between align-items-center fs-3 py-2">
            <span class="btn btn-rounded btn-outline-dark"> <i class="mdi mdi-battery-charging-90"></i> Yetenek Sayfası </span>
            <a href="/Skill/AddSkill/" class="btn btn-rounded btn-outline-info"> <i class="mdi mdi-plus"></i>Yeni Yetenek Ekle </a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-dark text-white fs-4 py-4">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Başlık </th>
                        <th> Değer </th>
                        <th> Sil </th>
                        <th> Güncelle </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var yetenek in Model)
                    {
                        <tr>
                            <td> @yetenek.SkillId </td>
                            <td> @yetenek.Title </td>
                            <td>
                                @{
                                    int sayi = 0;
                                    int.TryParse(yetenek.Value, out sayi);

                                    // Renk seçimi
                                    string renk = sayi >= 90 ? "bg-success" :
                                    sayi >= 80 ? "bg-warning" :
                                    sayi >= 70 ? "bg-info" :
                                    sayi >= 60 ? "bg-primary" :
                                    sayi >= 50 ? "bg-secondary" :
                                    sayi >= 40 ? "bg-dark" :
                                    sayi >= 30 ? "bg-light" :
                                    sayi >= 20 ? "" :  // lightpink özel stil
                                    "bg-danger";

                                    string ekStil = sayi >= 20 && sayi < 30 ? "background-color: lightpink;" : "";
                                }
                                <div class="progress">
                                    <div class="progress-bar @renk" role="progressbar" style="width: @sayi%; @ekStil"
                                         aria-valuenow="@sayi" aria-valuemin="0" aria-valuemax="100">
                                        @sayi%
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a href="/Skill/DeleteSkill/@yetenek.SkillId" class="btn btn-rounded btn-outline-danger">
                                    <i class="mdi mdi-delete"></i> Sil
                                </a>
                            </td>
                            <td>
                                <a href="/Skill/EditSkill/@yetenek.SkillId" class=" btn btn-rounded btn-outline-success">
                                    <i class="mdi mdi-tooltip-edit"></i> Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

