@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-white text-black d-flex justify-content-between align-items-center fs-4 py-3">
            <span class="btn btn-rounded btn-outline-dark"><i class="mdi mdi-battery-charging-90"></i> Referans Güncelleme Sayfası </span>
            <a href="/Testimonial/Index/" class="btn btn-rounded btn-outline-info"> <i class="mdi mdi-plus"></i> Referans Listesine Dön" </a>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("EditAbout", "About", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.AboutId)
                @Html.Label("Üst Başlık")
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                <br />

                @Html.Label("Açıklama")
                @Html.TextAreaFor(x => x.Description, 10,2,new { @class = "form-control"})

                <br />

                @Html.Label("Yaş")
                <select class="form-control" name="Age">
                    @for (int i = 1; i <=100; i++)
                    {
                        <option value="@i"> @i </option>
                    }
                </select>
                <br />

                @Html.Label("Mail Adresi")
                @Html.TextAreaFor(x => x.Mail, new { @class = "form-control",type = "email" })
                <br />

                 @Html.Label("Telefon Numarası ")
                @Html.TextAreaFor(x => x.Phone, new { @class = "form-control" ,type = "phone"})
                <br />
                
                @Html.Label("Adresi ")
                @Html.TextAreaFor(x => x.Address,10,2, new { @class = "form-control" , rows = 7 })
                <br />

                @Html.Label("Resim")
                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                <br /> 
                @Html.Label("Durum")
                <select class="form-control" name="Status">
                    @for (int i = 0; i <=1; i++)
                    {
                        <option value="@i"> @i </option>
                    }
                </select>
                <br /> 

                <button class=" btn btn-outline-primary"> <i class="mdi mdi-pencil"></i>  Güncelle </button>
            }
        </div>
    </div>
</div>

