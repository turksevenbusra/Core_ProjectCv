@using EntityLayer.Concrete
@model List<Message>

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title"> Gelen Mesajlar </h4>
                <p class="text-muted mb-1 small"> Hepsini Görüntüle </p>
            </div>
            <div class="preview-list">
                @foreach (var message in Model)
                {
                    <div class="preview-item border-bottom">
                        <div class="preview-thumbnail">
                            <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/@message.ImageUrl"
                                 alt="image" class="rounded-circle" />
                        </div>
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject"> @message.Name </h6>
                                    <p class="text-muted text-small"> @message.Date.ToShortDateString() </p>
                                </div>
                                <p class="text-muted"> @message.Content.Substring(0, 20)...</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
