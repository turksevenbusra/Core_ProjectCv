@using EntityLayer.Concrete
@model List<Contact>


<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    @foreach (var contact in Model)
    {
        <div class="mt-3 px-1">
            <div class="h5"> @contact.Title </div>
            <p>
                @contact.Description
            </p>
        </div>
        <div class="mt-53 px-1">
            <div class="row">
                <div class="col-sm-2">
                    <div class="pb-1"> Mail:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder"> @contact.Mail </div>
                </div>
                
                <div class="col-sm-2">
                    <div class="pb-1"> Telefon:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder"> @contact.Phone </div>
                </div>
            </div>
        </div>
    }
</div>