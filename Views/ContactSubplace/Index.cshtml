@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "ContactSubplace", FormMethod.Post))
{
    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header bg-white text-black d-flex justify-content-between align-items-center">
                <span class="btn btn-rounded btn-outline-dark"> <i class="mdi mdi-battery-charging-90"></i> Hakkımızda Sayfası </span>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @Html.Label("ID")
                    @Html.TextBoxFor(x => x.ContactId, new { @class = "form-control" })
                    <br />

                    @Html.Label("Başlık")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    @Html.Label("Açıklama")
                    @Html.TextAreaFor(x => x.Description, 10, 3, new { @class = "form-control" })
                    <br />
                    @Html.Label("Mail")
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    <br />
                    @Html.Label("Telefon")
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    <br />

                    <button class="btn btn-rounded btn-outline-primary"> Güncelle </button>
                </div>

            </div>
        </div>
    </div>
}

